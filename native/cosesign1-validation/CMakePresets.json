{
  "version": 4,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "default-vcpkg",
      "displayName": "Default (Release) + vcpkg toolchain",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/default-vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    { "name": "build", "configurePreset": "default" },
    { "name": "build-vcpkg", "configurePreset": "default-vcpkg" }
  ],
  "testPresets": [
    { "name": "test", "configurePreset": "default" },
    { "name": "test-vcpkg", "configurePreset": "default-vcpkg" }
  ]
}

<Project>
  <PropertyGroup>
    <!-- Prevent traversing to parent Directory.Build.props -->
    <ImportDirectoryBuildProps>false</ImportDirectoryBuildProps>
  </PropertyGroup>

  <!-- Versioning - centralized for all packages -->
  <PropertyGroup>
    <VersionPrefix>2.0.0</VersionPrefix>
    <VersionSuffix>preview</VersionSuffix>
    <Version>$(VersionPrefix)-$(VersionSuffix)</Version>
    <AssemblyVersion>$(VersionPrefix).0</AssemblyVersion>
    <FileVersion>$(VersionPrefix).0</FileVersion>
    <PackageVersion>$(VersionPrefix)-$(VersionSuffix)</PackageVersion>
  </PropertyGroup>

  <!-- Common build settings -->
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <!-- Test runner configuration (NUnit only) -->
  <PropertyGroup>
    <EnableNUnitRunner>true</EnableNUnitRunner>
    <TestingPlatformShowTestsFailure>true</TestingPlatformShowTestsFailure>
    <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
    <!-- Suppress MTP0001: VSTest properties ignored when using Microsoft.Testing.Platform -->
    <NoWarn>$(NoWarn);MTP0001</NoWarn>
  </PropertyGroup>

  <!-- Code analysis -->
  <PropertyGroup>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <!-- Strong name signing (apply to all non-test projects) -->
  <PropertyGroup Condition="'$(IsTestProject)' != 'true'">
    <SignAssembly>True</SignAssembly>
    <DelaySign>True</DelaySign>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)StrongNameKeys\35MSSharedLib1024.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <!-- NuGet package defaults for library projects -->
  <PropertyGroup Condition="'$(IsPackable)' != 'false' AND '$(IsTestProject)' != 'true'">
    <IsPackable>true</IsPackable>
    <Company>Microsoft</Company>
    <Authors>Microsoft</Authors>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/microsoft/CoseSignTool</PackageProjectUrl>
    <RepositoryUrl>https://github.com/microsoft/CoseSignTool</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReleaseNotes>CHANGELOG.md</PackageReleaseNotes>
    <PackageTags>cose;sign1;signing;verification;scitt;transparency;cryptography;security</PackageTags>
  </PropertyGroup>

  <!-- PackageId: Use project name directly. Version 2.0.0 indicates the major version upgrade from V1. -->
  <PropertyGroup Condition="'$(PackageId)' == ''">
    <PackageId>$(MSBuildProjectName)</PackageId>
  </PropertyGroup>

  <!-- Test projects configuration -->
  <PropertyGroup Condition="'$(IsTestProject)' == 'true'">
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <!-- Exclude test assemblies from code coverage -->
  <ItemGroup Condition="'$(IsTestProject)' == 'true'">
    <AssemblyAttribute Include="System.Diagnostics.CodeAnalysis.ExcludeFromCodeCoverageAttribute" />
  </ItemGroup>

  <!-- 
    NUnit Parallel Test Execution Configuration
    Include shared parallel configuration in all test projects.
    This enables fixture-level parallelism with 8 workers.
  -->
  <ItemGroup Condition="'$(IsTestProject)' == 'true'">
    <Compile Include="$(MSBuildThisFileDirectory)NUnitParallelConfig.cs" Link="Properties\NUnitParallelConfig.cs" />
  </ItemGroup>

  <!-- Strong name public key for InternalsVisibleTo (35MSSharedLib1024.snk) -->
  <PropertyGroup>
    <StrongNamePublicKey></StrongNamePublicKey>
    <!-- Moq's DynamicProxy public key for mocking internals -->
    <MoqPublicKey></MoqPublicKey>
  </PropertyGroup>

  <!-- 
    Auto-generate InternalsVisibleTo for test projects.
    Convention: Project "Foo" exposes internals to "Foo.Tests"
    Also expose to Moq's DynamicProxy for mocking internal types.
  -->
  <ItemGroup Condition="'$(IsTestProject)' != 'true'">
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>$(MSBuildProjectName).Tests, PublicKey=$(StrongNamePublicKey)</_Parameter1>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>DynamicProxyGenAssembly2, PublicKey=$(MoqPublicKey)</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <!-- Plugin projects - enable automatic deployment -->
  <PropertyGroup Condition="$(MSBuildProjectName.EndsWith('.Plugin'))">
    <IsPackable>true</IsPackable>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <!-- Include common package files for packable projects -->
  <ItemGroup Condition="'$(IsPackable)' == 'true'">
    <None Include="$(MSBuildThisFileDirectory)LICENSE" Pack="true" PackagePath="\" />
    <None Include="$(MSBuildThisFileDirectory)CHANGELOG.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>

+if(NOT DEFINED OPENSSL_MODULES_PATH)
+  set(_oqsprov_crypto_lib "${OPENSSL_CRYPTO_LIBRARY}")
+  if(_oqsprov_crypto_lib MATCHES ";")
+    list(GET _oqsprov_crypto_lib 1 _oqsprov_crypto_lib)
+  endif()
+  cmake_path(GET _oqsprov_crypto_lib PARENT_PATH OQS_MODULES_PARENT_PATH)
+  cmake_path(APPEND OQS_MODULES_PARENT_PATH "ossl-modules" OUTPUT_VARIABLE OPENSSL_MODULES_PATH)
+endif()
 else()

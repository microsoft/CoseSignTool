<Project Sdk="Microsoft.NET.Sdk">

  <!--Build configuration-->
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>CoseSign1.Certificates.Local</RootNamespace>
    <!-- Suppress PQC preview warnings for ML-DSA -->
    <NoWarn>$(NoWarn);SYSLIB5006</NoWarn>
  </PropertyGroup>

  <!--NuGet package configuration-->
  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Extensible local certificate factory for ephemeral certificate creation. Supports RSA, ECDSA, and ML-DSA (PQC) with pluggable key providers for TPM, HSM, and Confidential Compute scenarios.</Description>
  </PropertyGroup>

  <!--Package references-->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
  </ItemGroup>

  <!--Files to include in the package-->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="..\docs\packages\certificates-local.md" Pack="true" PackagePath="\docs\" Condition="Exists('..\docs\packages\certificates-local.md')" />
  </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">

    <!--Build configuration-->
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <!--NuGet package configuration-->
    <PropertyGroup>
        <PackageId>CoseSign1.Abstractions.V2</PackageId>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>V2 Abstractions required to extend or enhance CoseSign1 functionality with dynamic key acquisition and service metadata.</Description>
    </PropertyGroup>

    <!--Package references-->
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
        <PackageReference Include="System.Security.Cryptography.Cose" />
    </ItemGroup>

    <!--Files to include in the package-->
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\" />
        <None Include="..\docs\packages\abstractions.md" Pack="true" PackagePath="\docs\" Condition="Exists('..\docs\packages\abstractions.md')" />
    </ItemGroup>
</Project>

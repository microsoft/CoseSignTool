<Project Sdk="Microsoft.NET.Sdk">

  <!--Build configuration-->
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net10.0</TargetFrameworks>
  </PropertyGroup>

  <!--NuGet package configuration-->
  <PropertyGroup>
    <PackageId>CoseSignTool.Abstractions</PackageId>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Abstractions and interfaces for CoseSignTool plugins. Reference this package to create plugins that extend CoseSignTool without depending on the full implementation.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <!-- Dependencies needed for IValidator and ISigningService -->
  <ItemGroup>
    <ProjectReference Include="..\CoseSign1.Abstractions\CoseSign1.Abstractions.csproj" />
    <ProjectReference Include="..\CoseSign1.Validation\CoseSign1.Validation.csproj" />
  </ItemGroup>

  <!--Files to include in the package-->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="..\docs\packages\cosesigntool-abstractions.md" Pack="true" PackagePath="\docs\" Condition="Exists('..\docs\packages\cosesigntool-abstractions.md')" />
  </ItemGroup>

</Project>
